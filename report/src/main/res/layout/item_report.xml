<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/gridview_vertical_item_padding"
    android:paddingBottom="@dimen/gridview_vertical_item_padding"
    android:paddingLeft="@dimen/gridview_horizontal_item_padding"
    android:paddingRight="@dimen/gridview_horizontal_item_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/layer_card_background">

        <TextView
            android:id="@+id/risk_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:focusable="false"
            style="@android:style/TextAppearance.Holo.Medium"
            tools:text="Paysage"/>

        <TextView
            android:id="@+id/report_date"
            android:layout_below="@id/risk_name"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingRight="8dp"
            tools:text="18/06/2014"/>

        <TextView
            android:id="@+id/work_place"
            android:layout_below="@id/risk_name"
            android:layout_toLeftOf="@id/report_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:paddingLeft="8dp"
            tools:text="USA"/>

        <ImageView
            android:id="@+id/report_picture"
            android:layout_marginTop="10dp"
            android:layout_below="@id/work_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:focusable="false"
            tools:src="@drawable/test"/>
    </RelativeLayout>
</RelativeLayout>